rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (for showing author info)
      allow read: if true;
      // Only the user can create/update their own profile
      allow create, update: if isOwner(userId);
      // No deletes allowed
      allow delete: if false;
    }
    
    // Vibes collection (anonymous posts)
    match /vibes/{vibeId} {
      // Anyone can read vibes (including guests)
      allow read: if true;
      // Only authenticated users can create vibes
      allow create: if isAuthenticated();
      // Only allow updating heartsCount (for reactions)
      allow update: if isAuthenticated() && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['heartsCount', 'heartedBy']);
      // No deletes allowed
      allow delete: if false;
    }
    
    // Section Posts collection
    match /sectionPosts/{postId} {
      // Anyone can read posts
      allow read: if true;
      // Only authenticated users can create posts
      allow create: if isAuthenticated() && 
                       request.resource.data.createdBy == request.auth.uid;
      // Only allow updating reactions
      allow update: if isAuthenticated() && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reactions']);
      // Only the creator can delete
      allow delete: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }
    
    // Collabs collection
    match /collabs/{collabId} {
      // Anyone can read collabs
      allow read: if true;
      // Only authenticated users can create collabs
      allow create: if isAuthenticated() && 
                       request.resource.data.createdBy == request.auth.uid;
      // Anyone can update interestedUsers, only creator can update other fields
      allow update: if isAuthenticated() && (
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['interestedUsers', 'interestedCount']) ||
        (resource.data.createdBy == request.auth.uid)
      );
      // Only the creator can delete
      allow delete: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }
  }
}
